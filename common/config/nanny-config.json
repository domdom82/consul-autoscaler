{
  "leave_on_terminate": true,
  "disable_update_check": true,
  "watches": [
    {
      "type": "key",
      "key": "cluster/desiredhosts",
      "handler": "sh -c '/docker-autoscaler/nanny.py $AUTOSCALER_TYPE > /logs/desiredhosts_changed.log 2>&1'"
    },
    {
      "type": "nodes",
      "handler": "sh -c '/docker-autoscaler/nanny.py $AUTOSCALER_TYPE > /logs/nodes_changed.log 2>&1'"
    }
  ]
}
